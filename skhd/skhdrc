# focus window
alt - shift - ctrl - cmd - n : yabai -m window --focus west
alt - shift - ctrl - cmd - e : yabai -m window --focus south
alt - shift - ctrl - cmd - i : yabai -m window --focus north
alt - shift - ctrl - cmd - o : yabai -m window --focus east

# balance size of windows
alt - shift - ctrl - cmd - g : yabai -m space --balance
alt - shift - ctrl - cmd - m : cmd - h

# change window size
alt - shift - ctrl - cmd - a : yabai -m window --resize left:-20:0
alt - shift - ctrl - cmd - s : yabai -m window --resize top:0:20
alt - shift - ctrl - cmd - d : yabai -m window --resize top:0:-20
alt - shift - ctrl - cmd - f : yabai -m window --resize left:20:0
